pip2 install --upgrade pip
pip2 install keras
pip2 install pyro4
pip2 install pandas
pip2 install torch torchvision
apt-get update
apt-get -y install wget
apt-get -y install python-tk
apt-get -y install python-opencv
pip2 install opencv-contrib-python



%runscript
